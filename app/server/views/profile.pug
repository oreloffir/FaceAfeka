doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/resources/css/style.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='/resources/js/postController.js')
        script(src='/resources/js/profileController.js')
        script(src='/resources/js/utilitiesControllers.js')
    body
        include fragments/header.pug
        .container-fluid.max-width-1000
            .row
                #leftSide.col-md-3.col-sm-3
                    img.img-dialog-btn.img.img-responsive.img-circle(src='/images/profile/'+profile.imagePath, data-toggle="modal", data-target="#imageModal")
                    .profile_left_info
                        .profile_left_info_displayName #{profile.displayName}
                        .profile_left_info_email #{profile.email}
                        .profile_left_info_friends #{profile.friends.length} Friends
                        if profile.id !== user.id
                            .profile_left_info_add_friend
                                - if (friends.indexOf(profile.id) <= -1)
                                    button#profileFriendBtn.btn.btn-green(data-profileid = profile.id) Add friend
                                - else
                                    button#profileFriendBtn.btn(data-profileid = profile.id) Unfriend
                .col-md-6.col-sm-6
                    include fragments/addPost.pug
                    include fragments/posts.pug

                .col-md-3.col-sm-3 FaceAfeka 2017 (c)
        include fragments/imageModal.pug
        script.
            postController.init();
            profileController.init();
            scrollProfileLeft.init();
            imageDialog.init();