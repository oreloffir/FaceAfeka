doctype html
html
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/resources/css/style.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='/resources/js/postController.js')
        script(src='/resources/js/searchController.js')
        script(src='/resources/js/profileController.js')
        script(src='/resources/js/utilitiesControllers.js')
    body
        include fragments/header.pug
        .container-fluid.max-width-1000
            .row
                #leftSide.col-md-3.col-sm-3
                    include fragments/profileLeft.pug
                .col-md-6.col-sm-6
                    include fragments/addPost.pug
                    .posts-filters
                        span Filter:
                        a.btn.btn-green.posts-filter-item(href='/profile/'+profile.id, class=( postsFilter === 'all' ? 'selected' : '')) All
                        a.btn.btn-green.posts-filter-item(href='/profile/'+profile.id+'/photos', class=( postsFilter === 'photos' ? 'selected' : '')) Photos
                        a.btn.btn-green.posts-filter-item(href='/profile/'+profile.id+'/external', class=( postsFilter === 'external' ? 'selected' : '')) External
                        a.btn.btn-green.posts-filter-item(href='/profile/'+profile.id+'/text', class=( postsFilter === 'text' ? 'selected' : '')) Text
                    include fragments/posts.pug

                .col-md-3.col-sm-3
                    | right
        include fragments/imageModal.pug
        script.
            postController.init();
            profileController.init();
            scrollProfileLeft.init();
            imageDialog.init();
            searchController.init();